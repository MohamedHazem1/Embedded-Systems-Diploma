#include "stdio.h"

int main(){
	int x=0;
	printf("This program to check if the input is even or odd\n\n");
	printf("Enter a number: ");
	fflush(stdin),fflush(stdout);
	scanf("%d",&x);
	printf("%d is ",printf((x%2)=0?printf("Even"):printf("odd")));






	return 0;
}
