#include <stdio.h>
#include <stdlib.h>
int dicimal2binary();
int d2b(int dec);
int main(void) {
	int input;
	scanf("%d",&input);
	d2b(input);
	return 0;
}


int d2b(int dec){
	int binary[32];
	for (int i=0;i>=31;i++){
		binary[i]=dec%2;
		++i;
	}
}

int dicimal2binary(int dec){
	char a0=dec%2;
	char a1=a0%2;
	char a2=a1%2;
	char a3=a2%2;
	printf("the binary representation is %d%d%d%d",a3,a2,a1,a0);
	return 0;
}
