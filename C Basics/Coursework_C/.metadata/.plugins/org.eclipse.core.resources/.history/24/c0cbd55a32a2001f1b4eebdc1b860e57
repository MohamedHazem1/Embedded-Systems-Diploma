#include <stdio.h>
#include <stdlib.h>

/*void delete_bit();*/

int main(void) {
	int a;	int n=0;
	printf("Enter The number you want to modify\n");
	fflush(stdout);fflush(stdin);
	scanf("%d",&a);
	printf("Enter The bit you want to modify\n");
	fflush(stdout);(stdin);
	scanf("%d",&n);
	a&=~(1<<n);
	printf("%d",a);
	return 0;
}


